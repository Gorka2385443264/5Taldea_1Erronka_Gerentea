<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.txata.TxataController">
    <top>
        <HBox spacing="10.0">
            <!-- Otros elementos si son necesarios -->
        </HBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="267.0" prefWidth="281.0">
            <VBox fx:id="chatBox" spacing="10.0">
                <!-- Mensajes del chat -->
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="10.0">
            <TextField fx:id="messageField" promptText="Escribe un mensaje" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" onAction="#sendMessage" text="Enviar" />
        </HBox>
    </bottom>
</BorderPane>
